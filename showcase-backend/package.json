{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev --respawn -- src/index.ts",
    "build": "npx rimraf dist && npx tsc -p tsconfig.build.json",
    "lint": "eslint .",
    "test": "jest -i",
    "test:watch": "jest --watch",
    "postgresql": "npm run postgresql:kill && npm run postgresql:start",
    "postgresql:kill": "docker ps -a | grep showcase-postgresql | awk '{print $1}' | xargs -I {} docker rm -f {}",
    "postgresql:start": "docker run --rm -p 5432:5432 --name showcase-postgresql -e POSTGRES_PASSWORD=showcase-test -e POSTGRES_USER=showcase-test -d postgres:13",
    "prisma:migrate": "npx prisma migrate dev --preview-feature",
    "prisma:reset": "npx prisma migrate reset",
    "prisma:generate": "npx prisma generate",
    "prisma:seed": "npx prisma db seed --preview-feature",
    "prisma:studio": "npx prisma studio",
    "prisma:push": "npx prisma db push",
    "prisma:ci": "npx prisma migrate deploy",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\""
  },
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "@prisma/client": "^2.22.1",
    "algoliasearch": "^4.3.0",
    "apollo-server-express": "^2.24.0",
    "axios": "^0.21.1",
    "bip39": "^3.0.2",
    "bluebird": "^3.7.2",
    "boom": "^7.3.0",
    "class-validator": "^0.13.1",
    "convict": "^6.0.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "ethereumjs-wallet": "^0.6.3",
    "expo-server-sdk": "^3.6.0",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.0",
    "faker": "^5.5.3",
    "graphql": "^15.5.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.9.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.27.0",
    "pg": "^7.18.1",
    "random-words": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "stripe": "^8.61.0",
    "twilio": "^3.39.3",
    "type-graphql": "^1.1.1",
    "uuid": "^8.2.0",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@machinomy/types-ethereumjs-wallet": "^0.0.12",
    "@types/bluebird": "^3.5.35",
    "@types/boom": "^7.3.0",
    "@types/convict": "^6.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.16.1",
    "@types/faker": "^5.5.6",
    "@types/graphql-fields": "^1.3.3",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^15.0.0",
    "@types/random-words": "^1.1.1",
    "@types/stripe": "^8.0.417",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "babel-jest": "^26.6.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.0.1",
    "jest": "^27.0.4",
    "jest-mock-extended": "^1.0.15",
    "prettier": "^2.2.1",
