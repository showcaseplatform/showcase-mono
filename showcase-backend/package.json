{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start-dev": "ts-node-dev --respawn -- src/index.ts",
    "start-emulators": "npm run build & firebase emulators:start",
    "serve": "firebase serve --only functions",
    "lint": "eslint .",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "export-firestore": "firebase emulators:export seed",
    "import-firestore": "firebase emulators:import seed"
  },
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "algoliasearch": "^4.3.0",
    "axios": "^0.21.1",
    "bip39": "^3.0.2",
    "convict": "^6.0.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ethereumjs-wallet": "^0.6.3",
    "expo-server-sdk": "^3.6.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.1.0",
    "moment": "^2.27.0",
    "pg": "^7.18.1",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "stripe": "^8.61.0",
    "twilio": "^3.39.3",
    "uuid": "^8.2.0",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@types/convict": "^6.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.16.1",
    "@types/node": "^15.0.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.1.6",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  },
  "private": true
}
