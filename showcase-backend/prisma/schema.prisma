datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  // output             = "../src/prisma/generated/type-graphql"
  // emitTranspiledCode = false
}

